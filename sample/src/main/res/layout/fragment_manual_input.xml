<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Input Format Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Input Format"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/inputFormatChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCommaSeparated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comma Separated"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLineSeparated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line Separated"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSpaceSeparated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Space Separated"
                        android:checkable="true" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Manual Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœï¸ Manual Data Entry"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:hintEnabled="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="5000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manualInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLength="5000"
                        android:scrollbars="vertical"
                        android:hint="Enter data separated by your chosen format" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pasteClipboardButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="ðŸ“‹ Paste"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addSampleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="âž• Add Sample"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clearAllButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="ðŸ—‘ï¸ Clear"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Validation Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Validation Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/itemCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 items"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/material_dynamic_primary40" />

                </LinearLayout>

                <TextView
                    android:id="@+id/validationStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter data to validate"
                    android:textSize="13sp"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:fontFamily="monospace"
                    android:background="@color/material_dynamic_neutral95"
                    android:padding="8dp"
                    android:minHeight="40dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Preview Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘€ Data Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/previewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No valid data to preview"
                    android:textSize="13sp"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:fontFamily="monospace"
                    android:background="@color/material_dynamic_neutral95"
                    android:padding="12dp"
                    android:minHeight="100dp"
                    android:gravity="top" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Help Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Choose your preferred separator format\nâ€¢ Paste data directly from spreadsheets\nâ€¢ Add sample data to see examples\nâ€¢ Real-time validation ensures data quality\nâ€¢ Supports all data types with type conversion"
                    android:textSize="13sp"
                    android:textColor="@color/material_dynamic_neutral40"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>