<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Data Type Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dataTypeInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/material_dynamic_primary50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dataTypeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ String"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_primary40" />

                <TextView
                    android:id="@+id/dataTypeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Text data including PII like emails, SSN, phone numbers"
                    android:textSize="14sp"
                    android:textColor="@color/material_dynamic_neutral40" />

                <TextView
                    android:id="@+id/dataTypeExamples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Examples: john@example.com, 555-12-3456"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Generate Random Data Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ² Random Sample Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generateRandomButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ² Generate Random String Batch"
                    android:textAllCaps="false" />

                <!-- Item Count Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/itemCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 items"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/material_dynamic_primary40" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Preview Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘€ Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/previewDataText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click 'ðŸŽ² Generate Random Batch' to see preview"
                    android:textSize="13sp"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:fontFamily="monospace"
                    android:background="@color/material_dynamic_neutral95"
                    android:padding="12dp"
                    android:minHeight="100dp"
                    android:gravity="top" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Quick Actions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Generate new random batch anytime\nâ€¢ Perfect for quick API testing\nâ€¢ Automatic preview of data\nâ€¢ Supports all data types"
                    android:textSize="13sp"
                    android:textColor="@color/material_dynamic_neutral40"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>