<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed/Focused state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_dynamic_primary95" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/material_dynamic_primary40" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_dynamic_primary95" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/material_dynamic_primary40" />
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/material_dynamic_surface" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/material_dynamic_outline" />
                </shape>
            </item>

            <!-- Dropdown arrow -->
            <item android:gravity="end|center_vertical"
                android:right="12dp">
                <shape android:shape="rectangle">
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>